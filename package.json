{
  "name": "spu",
  "version": "1.0.0",
  "description": "A web that can help you convert minecraft commands from the older version to the newer version.",
  "main": "js/index.js",
  "directories": {
    "doc": "docs/",
    "test": "src/tests/"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@material-ui/core": "^3.9.2",
    "babel-loader": "^8.0.5",
    "lowdb": "^1.0.0",
    "mdi-material-ui": "^5.9.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.0",
    "@types/power-assert": "^1.5.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.0",
    "espower-typescript": "^8.1.3",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "power-assert": "^1.5.0",
    "ts-node": "^6.0.3",
    "typescript": "^2.9.2",
    "uglify-js-es6": "^2.8.9"
  },
  "scripts": {
    "prebuild": "echo 如果出稳定版，记得改npm包版本并上传 && tsc",
    "build:ui": "browserify ./src/view/mainViewRender.jsx -o ./dist/uiBundle.js -t babelify && uglifyjs ./dist/uiBundle.js -m -c -o ./docs/bundle.ui.min.js",
    "build:core": "browserify ./js/index.js -o ./dist/coreBundle.js && uglifyjs ./dist/coreBundle.js -m -c -o ./docs/bundle.core.min.js",
    "build": "npm run build:ui && npm run build:core",
    "test": "mocha --require espower-typescript/guess \"./src/test/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SPGoding/spu.git"
  },
  "keywords": [],
  "author": "SPGoding",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SPGoding/spu/issues",
    "email": "SPGoding@outlook.com"
  },
  "homepage": "https://spgoding.github.io/spu",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "current"
          }
        }
      ],
      [
        "@babel/preset-react"
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  }
}
